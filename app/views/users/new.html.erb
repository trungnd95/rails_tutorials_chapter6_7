<% content_for :title do %>
<title>Sign up</title>
<% end %>
<div class="wrapper">
	<h1>Sign up </h1>
	<div class="container">
		<div class="col-md-6 col-md-offset-3">
		<hr/>
	<%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' , placeholder: 'Input name ... ' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: 'Input email ... ' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control',  placeholder: 'Input password ...'%>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' , placeholder: 'Confirm password ...'%>

      <%= f.submit "Create my account", class: "btn btn-primary submit-regis" %>

    <% end %>
		</div>
		

	</div>	
</div>


