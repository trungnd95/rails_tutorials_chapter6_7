<% content_for :title do %>
<title>Login</title>
<% end %>
<div class="wrapper">
	<h1>Login</h1>
	<div class="container">
		<div class="col-md-6 col-md-offset-3">
		<hr/>
<div class="login">
	<%= form_tag(action: 'attempt_login') do %>
	<%= label_tag(:email) %>
	<%= email_field_tag(:email,nil, class: 'form-control') %>
	<%= label_tag(:password) %>
	<%= password_field_tag(:password,nil, class: 'form-control') %>
	<%= submit_tag("Login",class: 'form-control btn btn-primary') %>
	<% end %>
</div>
</div>
</div>	
</div>